{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}